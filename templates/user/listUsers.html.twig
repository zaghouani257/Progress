{% extends 'base.html.twig' %}
{% block title %}Gestion Utilisateur{% endblock %}
{% block contentHeader %} Utilisateurs {% endblock %}
{% block  contentMain %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <a class="btn bg-gradient-info float-left " href="{{ path('AddUser') }}">
                        <i class="far fa-plus-square "> ajouter
                        </i>

                    </a>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                        <tr>
                            <th>NOM</th>
                            <th>PRENOM</th>
                            <th>EMAIL</th>
                            <th>ROLE</th>
                            <th>ATTRIBUER ROLE</th>

                        </tr>
                        </thead>
                        <tbody>
                        <tr {% for user in users %}>
                            <td>{{  user.nom}}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|json_encode }}</td>
                            <td><a href="{{ path('modifierutilisateur', {'id': user.id}) }}">Attribuer </a></td>



                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="{{ path('userUpdate',{'id':user.id}) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    modifer
                                </a>
                                <a class="btn btn-danger btn-sm" href="{{ path('deleteUser',{'id':user.id}) }}">
                                    <i class="fas fa-trash">
                                    </i>
                                    supprimer
                                </a>
                            </td>
                        </tr {% endfor %}>

                        </tbody>
                    </table>                                                                                                                            Q
                </div>
                <div class="card-footer">
                    <div class="navigation">

                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
{% endblock %}